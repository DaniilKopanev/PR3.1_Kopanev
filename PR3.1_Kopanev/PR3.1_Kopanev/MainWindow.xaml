        xmlns:local="clr-namespace:PR3._1_Kopanev"
        mc:Ignorable="d"
        Title="Счетчик" Height="450" Width="800">
    <Grid Background="Blue">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label FontSize="18" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" HorizontalContentAlignment="Center" BorderThickness="1" BorderBrush="#FF5B5B5B" Foreground="White" Margin="327,0,300,0" >
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform Y="-2" X="0"/>
                </TransformGroup>
            </Label.RenderTransform> Счётчик
        </Label>
        <Grid Grid.Row="1" Background="Blue">
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition Height="285"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="text2" Height="80" Grid.Column="1" Grid.RowSpan="1" FontSize="30" HorizontalContentAlignment="Center" Text="0" Margin="10,5,10,5" />
