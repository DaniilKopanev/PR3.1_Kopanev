            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="2">
                <Button x:Name="Button13" Grid.Column="0" Grid.Row="1" Height="30" Width="247" FontSize="20" Background="Green" Foreground="White" FontWeight="Normal" FontFamily="Arial" Content="+3" Margin="0 10 0 0" Click="bt13_Click"/>
