                <Button x:Name="Button15" Grid.Column="0" Grid.Row="1" Height="30" Width="245" FontSize="20" Background="Green" Foreground="White" FontWeight="Normal" FontFamily="Arial" Content="+1" Margin="0 10 0 0" Click="bt15_Click"/>
                <Button x:Name="Button16" Grid.Column="0" Grid.Row="1" Height="30" Width="247" FontSize="20" Background="Red" Foreground="White" FontWeight="Normal" FontFamily="Arial" Content="-1" Margin="0 10 0 0" Click="bt16_Click"/>
                <Button x:Name="Button17" Grid.Column="0" Grid.Row="1" Height="30" Width="247" FontSize="20" Background="Red" Foreground="White" FontWeight="Normal" FontFamily="Arial" Content="-2" Margin="0 10 0 0" Click="bt17_Click"/>
                <Button x:Name="Button18" Grid.Column="0" Grid.Row="1" Height="30" Width="248" FontSize="20" Background="Red" Foreground="White" FontWeight="Normal" FontFamily="Arial" Content="-3" Margin="0 10 0 0" Click="bt18_Click"/>
                <Button x:Name="Button19" Grid.Column="0" Grid.Row="1" Height="30" Width="90" FontSize="20" Background="Yellow" Foreground="White" FontWeight="Normal" FontFamily="Arial" Content="Сброс" Margin="0 10 0 0" Click="bt19_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
