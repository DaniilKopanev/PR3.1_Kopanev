            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="1">
                <Button x:Name="Button7" Grid.Column="0" Grid.Row="1" Height="30" Width="248" FontSize="20" Background="Green" Foreground="White" FontWeight="Normal" FontFamily="Arial" Content="+3" Margin="0 10 0 0" Click="bt7_Click"/>
                <Button x:Name="Button8" Grid.Column="0" Grid.Row="1" Height="30" Width="246" FontSize="20" Background="Green" Foreground="White" FontWeight="Normal" FontFamily="Arial" Content="+2" Margin="0 10 0 0" Click="bt8_Click"/>
                <Button x:Name="Button9" Grid.Column="0" Grid.Row="1" Height="30" Width="245" FontSize="20" Background="Green" Foreground="White" FontWeight="Normal" FontFamily="Arial" Content="+1" Margin="0 10 0 0" Click="bt9_Click"/>
                <Button x:Name="Button10" Grid.Column="0" Grid.Row="1" Height="30" Width="246" FontSize="20" Background="Red" Foreground="White" FontWeight="Normal" FontFamily="Arial" Content="-1" Margin="0 10 0 0" Click="bt10_Click"/>
                <Button x:Name="Button11" Grid.Column="0" Grid.Row="1" Height="30" Width="246" FontSize="20" Background="Red" Foreground="White" FontWeight="Normal" FontFamily="Arial" Content="-2" Margin="0 10 0 0" Click="bt11_Click"/>
