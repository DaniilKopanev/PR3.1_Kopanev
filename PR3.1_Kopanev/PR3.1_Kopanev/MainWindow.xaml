                <Button x:Name="Button4" Grid.Column="0" Grid.Row="1" Height="30" Width="245" FontSize="20" Background="Red" Foreground="White" FontWeight="Normal" FontFamily="Arial" Content="-1" Margin="0 10 0 0" Click="bt4_Click"/>
                <Button x:Name="Button5" Grid.Column="0" Grid.Row="1" Height="30" Width="244" FontSize="20" Background="Red" Foreground="White" FontWeight="Normal" FontFamily="Arial" Content="-2" Margin="0 10 0 0" Click="bt5_Click"/>
