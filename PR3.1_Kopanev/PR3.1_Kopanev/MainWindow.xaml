            <TextBox x:Name="text1" Height="80" Grid.Column="0" Grid.RowSpan="1" FontSize="30" HorizontalContentAlignment="Center" Text="0" Margin="10,5,10,5" />
            <StackPanel Grid.Row="1">
                <Button x:Name="Button1" Grid.Column="0" Grid.Row="1" Height="30" Width="245" FontSize="20" Background="Green" Foreground="White" FontWeight="Normal" FontFamily="Arial" Content="+3" Margin="0 10 0 0" Click="bt1_Click_1"/>
                <Button x:Name="Button2" Grid.Column="0" Grid.Row="1" Height="30" Width="243" FontSize="20" Background="Green" Foreground="White" FontWeight="Normal" FontFamily="Arial" Content="+2" Margin="0 10 0 0" Click="bt2_Click"/>
